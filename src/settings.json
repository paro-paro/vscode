{
  // window
  "window.nativeTabs": true,
  "window.customTitleBarVisibility": "never",

  // search
  "search.exclude": {
    "**/pnpm-lock.yaml": true
  },

  // workbench
  "workbench.colorTheme": "Paro Paro Night",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.fontAliasing": "antialiased",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.tabActionLocation": "right",
  "workbench.editor.enablePreview": false,
  "workbench.activityBar.orientation": "vertical",

  // terminal
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,

  // files
  "files.eol": "\n", // LF (Line Feed)
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.associations": {
    ".env": "properties",
    ".env.*": "properties",
    "setup": "shellscript",
    ".vimrc": "shellscript",
    ".viminfo": "shellscript",
    "nirc": "properties",
    "rc": "properties",
    "config": "properties",
    "credentials": "properties",
    ".nuxtrc": "properties",
    "*.ejs": "html"
  },

  // editor
  "editor.fontFamily": "Source Code Pro",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.lineHeight": 24,
  "editor.cursorStyle": "line-thin",
  "editor.scrollbar.verticalScrollbarSize": 4,
  "editor.scrollbar.horizontalScrollbarSize": 4,
  "editor.scrollBeyondLastLine": false,
  "editor.renderFinalNewline": "dimmed",
  "editor.lineNumbers": "on",
  "editor.renderLineHighlight": "none",
  "editor.guides.highlightActiveIndentation": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.lightbulb.enabled": "off",
  "editor.gotoLocation.multipleDefinitions": "goto",

  // editor.intellisense
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.suggest.showKeywords": false,
  "editor.parameterHints.enabled": true,
  "editor.snippetSuggestions": "inline",
  "editor.quickSuggestions": {
    "other": "off",
    "comments": "off",
    "strings": "off"
  },

  // editor.formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },

  // more...
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": true,
  "explorer.decorations.badges": false,
  "explorer.compactFolders": false,
  "extensions.ignoreRecommendations": true,
  "html.format.indentInnerHtml": true,
  "git.openRepositoryInParentFolders": "never",
  "debug.javascript.codelens.npmScripts": "never",

  // language overrides
  "[shellscript]": {
    "editor.tabSize": 4
  },

  // extensions
  "material-icon-theme.files.color": "#42a5f5",
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.folders.color": "#90a4ae",
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.saturation": 1,
  "material-icon-theme.hidesExplorerArrows": true,
  "material-icon-theme.opacity": 1,
  "material-icon-theme.files.associations": {
    "nirc": "npm",
    "rc": "npm",
    "**.env": "Settings"
  },

  "prettier.semi": false,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.endOfLine": "lf",

  "tailwindCSS.colorDecorators": true,
  "tailwindCSS.classAttributes": ["class", "className", ".*Styles*"],

  "eslint.rules.customizations": [
    { "rule": "perfectionist/**", "severity": "info" },
    { "rule": "stylistic/eol-last", "severity": "off" },
    { "rule": "stylistic/no-trailing-spaces", "severity": "off" },
    { "rule": "stylistic/no-multiple-empty-lines", "severity": "off" }
  ]
}
